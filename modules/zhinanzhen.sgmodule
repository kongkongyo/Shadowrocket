#[rewrite_local]
# 🗺️ Network Defaults
1 = type=http-response,pattern=^https?:\/\/configuration\.ls\.apple\.com\/config\/defaults(\?.*)?$,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/VirgilClyne/iRingo/main/js/Location.request.js
2 = type=http-response,pattern=^https?:\/\/configuration\.ls\.apple\.com\/config\/defaults(\?.*)?$ url script-response-body https://raw.githubusercontent.com/VirgilClyne/iRingo/main/js/Location.response.js
# 📍 Country Code
3 = type=http-response,pattern=^https?:\/\/gspe1-ssl\.ls\.apple\.com\/pep\/gcc url script-response-body https://raw.githubusercontent.com/VirgilClyne/iRingo/main/js/Location.response.js
# 🗺️ Announcements
4 = type=http-response,pattern=^https?:\/\/gspe35-ssl\.ls\.apple\.(com|cn)\/config\/announcements(\?.*)?$,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/VirgilClyne/iRingo/main/js/Location.request.js
# 🗺️ Resource Manifest
5 = type=http-response,pattern=^https?:\/\/gspe35-ssl\.ls\.apple\.(com|cn)\/geo_manifest\/dynamic\/config(\?.*)?$,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/VirgilClyne/iRingo/main/js/Location.request.js

#[mitm]
hostname = %APPEND% configuration.ls.apple.com, gspe1-ssl.ls.apple.com, gspe12-ssl.ls.apple.com, gspe12-cn-ssl.ls.apple.com, gspe19-ssl.ls.apple.com, gspe19-cn-ssl.ls.apple.com, gspe35-ssl.ls.apple.com, gsp-ssl.ls.apple.com, direction2.is.autonavi.com, dispatcher.is.autonavi.com, rap.is.autonavi.com, sundew.ls.apple.com